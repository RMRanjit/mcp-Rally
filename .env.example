# MCP Rally Server Environment Configuration
# Copy this file to .env and fill in your specific values

# Rally API Configuration (Required)
RALLY_API_KEY=your_rally_api_key_here
RALLY_BASE_URL=https://rally1.rallydev.com
RALLY_INTEGRATION_VENDOR=AI-Assistant

# Transport Configuration
RALLY_TRANSPORT=stdio
RALLY_SERVER_PORT=3000
RALLY_SERVER_HOST=localhost

# Application Environment
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty

# Performance Settings
HTTP_TIMEOUT=30000
CONNECTION_POOL_SIZE=10

# Security Settings (Optional)
ENABLE_CORS=true
CORS_ORIGINS=*

# Development Settings
ENABLE_DEBUG=false
ENABLE_REQUEST_LOGGING=false