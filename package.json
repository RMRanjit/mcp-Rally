{
  "name": "mcp-rally",
  "version": "1.0.0",
  "description": "MCP server for Rally Web Services API integration",
  "keywords": [
    "mcp",
    "rally",
    "model-context-protocol",
    "api-integration",
    "typescript"
  ],
  "author": {
    "name": "AI Assistant",
    "email": "noreply@example.com"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:fresh": "npm run clean && npm run build",
    "dev": "tsx src/index.ts",
    "dev:stdio": "RALLY_TRANSPORT=stdio tsx src/index.ts",
    "dev:sse": "RALLY_TRANSPORT=sse tsx src/index.ts",
    "start": "npm run build && node dist/index.js",
    "start:stdio": "npm run build && RALLY_TRANSPORT=stdio node dist/index.js",
    "start:sse": "npm run build && RALLY_TRANSPORT=sse node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "mcp:stdio": "node dist/index.js",
    "mcp:sse": "RALLY_TRANSPORT=sse node dist/index.js",
    "claude:start": "node scripts/start-for-claude.js",
    "claude:start:shell": "./scripts/start-for-claude.sh",
    "prod:start": "node dist/index.js",
    "prod:start:stdio": "RALLY_TRANSPORT=stdio node dist/index.js",
    "prod:start:sse": "RALLY_TRANSPORT=sse node dist/index.js",
    "docs:generate": "typedoc src/index.ts --out docs",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:dev:up": "./scripts/docker-dev.sh up",
    "docker:dev:down": "./scripts/docker-dev.sh down",
    "docker:dev:logs": "./scripts/docker-dev.sh logs",
    "docker:prod": "./scripts/docker-prod.sh",
    "docker:prod:up": "./scripts/docker-prod.sh up",
    "docker:prod:down": "./scripts/docker-prod.sh down",
    "docker:prod:logs": "./scripts/docker-prod.sh logs",
    "docker:build:dev": "docker build -f docker/dockerfiles/Dockerfile.development -t rally-mcp:dev .",
    "docker:build:prod": "docker build -f docker/dockerfiles/Dockerfile.production -t rally-mcp:prod ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "uuid": "^13.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/mcp-rally.git"
  },
  "bugs": {
    "url": "https://github.com/example/mcp-rally/issues"
  },
  "homepage": "https://github.com/example/mcp-rally#readme",
  "publishConfig": {
    "access": "public"
  }
}
